<!-- Left Sidebar -->
<section id="left-sidebar">

<div class="logo">
  <a href="/" class="link-scroll"><img src="/assets/other_images/logo.png" alt="Twilli Air"></a>
</div><!-- .logo -->

<!-- Menu Icon for smaller viewports -->
<div id="mobile-menu-icon" class="visible-xs" onClick="toggle_main_menu();"><span class="glyphicon glyphicon-th"></span></div>

<ul id="main-menu">
      <li id="menu-item-book" class="menu-item scroll"></li>
          <li id="menu-item-becomemovie" class="menu-item scroll"></li>
          <li id="menu-item-datamovie" class="menu-item scroll"></li>
          <li id="" class="menu-item scroll"></li>
</ul><!-- #main-menu -->

<p id="notice"><%= notice %></p>

</section><!-- #left-sidebar -->


<section id="main-content" class="clearfix">

        <article id="intro" class="section-wrapper clearfix" data-custom-background-img="/assets/other_images/bg5.jpg">

           <div class="content-wrapper clearfix">

              <div class="col-sm-10 col-md-9 pull-right">


                    <h1 class="section-title">
                        Books
                    </h1>

                    <div class="btn-group btn-group-justified" role="group" aria-label="Justified button group">
                      <%
                      ('A'..'Z').each do |letter|
                      %>
                      <a class="btn btn-default" role="button" href="<%=books_search_path(letter)%>"><%= letter %></a>
                      <%
                      end
                      %>
                    </div>
                    <%
                    unless @books.blank?
                      item = 0

                      @books.each do |book|
                        item += 1

                        if item % BBM::MAX_ROW_ITEMS == 1
                          %>
                          <section class="feature-columns row clearfix">
                          <%
                        end

                        %>
                          <article class="feature-col col-md-4">
                            <a class="thumbnail linked" onclick="populate_and_open_modal(event, 'modal-content-<%=item%>');" href="">
                              <div class="image-container">
                                <img alt="Lorem Ipsum" class="item-thumbnail" data-img-src="/assets/other_images/project-2.jpg" src="/assets/other_images/project-2.jpg">
                              </div>
                              <div class="caption">
                                <h5><%=book.title%></h5>
                                <p><%=book.authors%></p>
                              </div><!-- .caption -->
                            </a><!-- .thumbnail -->

                            <div id="modal-content-<%=item%>" class="content-to-populate-in-modal">
                              <img alt="Lorem Ipsum" class="full-width" data-img-src="/assets/other_images/top-image2.jpg" src="/assets/other_images/top-image2.jpg">
                              <h1><%=book.title%></h1>
                              <p><%=book.descriptiontext%></p>
                            </div><!-- #modal-content-<%=item%> -->
                          </article>
                        <%

                        if item % BBM::MAX_ROW_ITEMS == 0
                          %>
                          </section>
                          <%
                        end

                      end

                      if item % BBM::MAX_ROW_ITEMS != 1
                        %>
                        </section>
                        <%
                      end

                      %>
                      <section class="feature-columns row clearfix">
                        <ul class="pager">
                          <%
                          unless @page_number <= 1
                          %>
                          <li class="previous">
                            <%= link_to "&larr; Previous".html_safe, books_search_path(params[:letter], page: @page_number - 1) %>
                          </li>
                          <%
                          end
                          unless (@page_number * BBM::MAX_PAGE_ITEMS) >= @num_books
                          %>
                          <li class="next">
                            <%= link_to "Next &rarr;".html_safe, books_search_path(params[:letter], page: @page_number - 1) %>
                          </li>
                          <%
                          end
                          %>
                        </ul>
                      </section>
                    <%
                    else
                    %>
                    <section class="feature-columns row clearfix">
                      <div class="alert alert-danger" role="alert">
                        <strong>Ooops!</strong> No books found
                      </div>
                    </section>

                    <%
                    end
                    %>
              </div>
          </div>
        </article><!-- .section-wrapper -->
</section>
